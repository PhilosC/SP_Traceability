      "url": "https://API-TEST.osram.com:35443/REST/(to be released)/SPTraceParaSet",
      "description": "Test"
    },
    {
      "url": "https://API.osram.com:35443/REST/(to be released)/SPTraceParaSet",
      "description": "Production"
    }
  ],
  "paths": {
    "/save": {
      "post": {
        "summary": "Save scanning results into back end ERP",
        "tags": [],
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "Delivery": {
                      "type": "string",
                      "minLength": 10,
                      "maxLength": 10,
                      "example": "360439766"
                    },
                    "Pcode": {
                      "type": "string",
                      "maxLength": 71,
                      "example": "(P)A71154400DG(W)DG(L)SP1(D)151212(C)00019387(V)0019"
                    },
                    "Type": {
                      "type": "string",
                      "minLength": 1,
                      "maxLength": 1,
                      "description": "\"E\" = \"Error\", \"S\" = \"Success\".",
                      "example": "\"S\", \"E\""
                    },
                    "Message": {
                      "type": "string",
                      "maxLength": 220,
                      "example": "\"Material is not correct!\""
                    }
                  }
                }
              }
            }
          }
        },
        "operationId": "post-save",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "description": "Based on the OB qty and OB detail to calculate the scanning results.",
                "properties": {
                  "Delivery": {
                    "type": "string",
                    "description": "Outbound delivery number"
                  },
                  "Pcode": {
                    "type": "string",
                    "description": "Production code / Traceability",
                    "example": "(P)A71154400DG(W)DG(L)SP1(D)151212(C)00019387(V)0019"
                  },
                  "IxOBQty": {
                    "$ref": "../models/OB_QTY.v1.json"
                  },
                  "IxOBDetail": {
                    "$ref": "../models/OB_Detail.v1.json"
                  }
                },
                "required": [
                  "Delivery",
                  "Pcode",
                  "IxOBQty",
                  "IxOBDetail"
                ]
              }
            }
          },
          "description": ""
        },
        "description": "Based on the OB information in get_ob API, This API is the 2nd process in SP Traceability process, used to save scanning results."
      }
    }
  },
  "components": {
    "schemas": {},
    "securitySchemes": {
      "API Key - Test": {
        "type": "apiKey",
        "in": "query"
      },
      "API Key - 2": {
        "type": "apiKey",
        "in": "query"
      }
    }
  }
}